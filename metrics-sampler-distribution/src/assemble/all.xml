<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>all</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
					<include>org.metrics-sampler:metrics-sampler-core</include>
					<include>org.metrics-sampler:metrics-sampler-extension-base</include>
					<include>org.metrics-sampler:metrics-sampler-extension-graphite</include>
					<include>org.metrics-sampler:metrics-sampler-extension-jmx</include>
					<include>org.metrics-sampler:metrics-sampler-extension-apache-status</include>
					<include>org.metrics-sampler:metrics-sampler-extension-jdbc</include>
					<include>org.metrics-sampler:metrics-sampler-extension-redis</include>
			</includes>
			<binaries>
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
				<directoryMode>700</directoryMode>
				<fileMode>600</fileMode>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
			</binaries>
		</moduleSet>
	</moduleSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<directoryMode>700</directoryMode>
			<fileMode>600</fileMode>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>../src/configs</directory>
			<outputDirectory>config</outputDirectory>
			<lineEnding>unix</lineEnding>
			<directoryMode>700</directoryMode>
			<fileMode>600</fileMode>
		</fileSet>
		<fileSet>
			<directory>../src/scripts/linux</directory>
			<lineEnding>unix</lineEnding>
			<outputDirectory>bin</outputDirectory>
			<directoryMode>700</directoryMode>
			<fileMode>700</fileMode>
			<filtered>true</filtered>
		</fileSet>
	</fileSets>
</assembly>